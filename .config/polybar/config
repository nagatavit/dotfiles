[module/kdeconnect]
type = custom/script
exec = "~/.config/polybar/scripts/polybar-kdeconnect.sh -d"
tail = true
;label-padding    = 2
click-left = "~/.config/polybar/scripts/polybar-kdeconnect.sh -m"

[module/i3]
type = internal/i3
pin-workspaces = true

; Mouse click
enable-click = true

; Mouse scroll
enable-scroll = false

; Sort
index-sort = true

; Display icons
fuzzy-match = false

; Icons
ws-icon-0       = 1;1:
ws-icon-1       = 2;2:
ws-icon-2       = 3;3:
ws-icon-3       = 4;4:|
ws-icon-4       = 5;5:
ws-icon-5       = 6;6:
ws-icon-6       = 7;7:
ws-icon-7       = 8;8:
ws-icon-8       = 9;9:|
ws-icon-9       = 10;10:

; Focused label
label-focused            = %icon%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.blue}
label-focused-padding    = 1

; Unfocused labels
label-unfocused            = %icon%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding    = 1

; Visible labels
label-visible            = %icon%
label-visible-foreground = ${colors.blue}
label-visible-padding    = 1

; Urgent labels
label-urgent            = %icon%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding    = 1

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/arch-updates.sh
interval = 1000
label = Updates: %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = " "
format-prefix-foreground = $(colors.foreground)
label-urgent-padding    = 1

[module/light]
type = custom/script
format = <label>
exec = ~/.config/polybar/scripts/light.sh --get
interval = 1
label = %output%
format-prefix = "  "
format-prefix-foreground = ${colors.blue}
label-foreground = ${colors.blue}
scroll-up = ~/.config/polybar/scripts/light.sh --up
scroll-down = ~/.config/polybar/scripts/light.sh --down
click-left = ~/.config/polybar/scripts/light.sh --max
click-right = ~/.config/polybar/scripts/light.sh --min

[module/battery]
;https://github.com/jaagr/polybar/wiki/Module:-battery
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%% CHR %time%
label-charging-foreground = ${colors.green}
format-charging-foreground = ${colors.green}
format-charging-background = ${colors.background}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% DIS %time%
label-discharging-foreground = ${colors.green}
format-discharging-foreground = ${colors.green}
format-discharging-background = ${colors.background}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.green}
format-foreground = ${colors.foreground}
format-background = ${colors.background}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.green}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.green}
animation-charging-framerate = 750

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label =: %output%

format-foreground = ${colors.green}
format-background = ${colors.background}
format-prefix = ""
format-prefix-foreground = ${colors.green}
label-padding    = 1

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = " %essid% %local_ip% "
label-connected-foreground = #eefafafa
label-disconnected = 
label-disconnected-foreground = #66ffffff
label-urgent-padding    = 2

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-foreground = ${colors.green}
label-padding    = 1
format-background = ${colors.background}

